-- A short (one-line) description of the package.
synopsis:        A simple typed lambda calculus implementation.

-- A longer description of the package.
-- description:

-- The license under which the package is released.
license:         MIT

-- The file containing the license text.
license-file:    LICENSE

-- The package author(s).
author:          Luis Alberto Díaz Díaz

-- An email address to which users can send suggestions, bug reports, and patches.
maintainer:      73986926+Luis-omega@users.noreply.github.com

-- A copyright notice.
-- copyright:
category:        Language
build-type:      Simple

-- Extra doc files to be distributed with the package, such as a CHANGELOG or a README.
extra-doc-files: CHANGELOG.md

-- Extra source files to be distributed with the package, such as examples, or a tutorial module.
-- extra-source-files:


flag TestMode
  description: Signal if we are more flexible at building the package
  default:     True
  manual:      True

common warnings
  if flag(testmode)
    ghc-options: -Wall -Wno-prepositive-qualified-module

  else
    ghc-options: -Wall -Werror -Wno-prepositive-qualified-module

common common_plugings
  ghc-options: -fplugin=Effectful.Plugin

common common_extensions
  default-extensions:
    DeriveFunctor
    DeriveGeneric
    DeriveLift
    DerivingVia
    DisambiguateRecordFields
    DuplicateRecordFields
    ExplicitForAll
    FlexibleContexts
    LambdaCase
    NamedFieldPuns
    NamedWildCards
    NumericUnderscores
    OverloadedRecordDot
    OverloadedStrings
    PartialTypeSignatures
    RecordWildCards
    ScopedTypeVariables
    TypeApplications
    TypeOperators

library
  -- Import common warning flags.
  import:
    warnings,
    common_extensions,
    common_plugings

  -- ghc-options: -fplugin=Effectful.Plugin

  -- Modules exported by the library.
  exposed-modules:
    Octizys.Ast.Evaluation
    Octizys.Ast.Expression
    Octizys.Ast.Type
    Octizys.Cst.Comment
    Octizys.Cst.Expression
    Octizys.Cst.Fixpoint
    Octizys.Cst.InfoId
    Octizys.Cst.Span
    Octizys.Cst.TopItem
    Octizys.Cst.Type
    Octizys.Cst.VariableId
    Octizys.Effects.Console.Effect
    Octizys.Effects.Console.Interpreter
    Octizys.Effects.Generator.Effect
    Octizys.Effects.Generator.Interpreter
    Octizys.Effects.Logger.ConsoleInterpreter
    Octizys.Effects.Logger.Effect
    Octizys.Effects.Parser.Backend
    Octizys.Effects.Parser.Combinators
    Octizys.Effects.Parser.Effect
    Octizys.Effects.Parser.Interpreter
    Octizys.Effects.SymbolResolution.Effect
    Octizys.Effects.SymbolResolution.Interpreter
    Octizys.HistoryMap
    Octizys.Inference.Inference
    Octizys.Parser.Common
    Octizys.Parser.Expression
    Octizys.Parser.TopItem
    Octizys.Parser.Type
    Octizys.Pretty.Comment
    Octizys.Pretty.Expression
    Octizys.Pretty.TopItem
    Octizys.Pretty.Type

  -- Modules included in this library but not exported.
  -- other-modules:

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:
    , base              ^>=4.18.2.1
    , containers
    , effectful
    , effectful-core
    , effectful-plugin
    , effectful-th
    , pretty-show
    , prettyprinter
    , QuickCheck
    , template-haskell
    , text

  -- Directories containing source files.
  hs-source-dirs:   src

  -- Base language which the package is written in.
  default-language: Haskell2010

executable octizys
  -- Import common warning flags.
  import:
    warnings
    , common_extensions
    , common_plugings

  -- .hs or .lhs file containing the Main module.
  main-is:          Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:
    Octizys.Compiler.Compiler
    Octizys.Repl.Ast
    Octizys.Repl.Parser
    Octizys.Repl.Repl
    Cli 

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- Other library packages from which modules are imported.
  build-depends:
    , base                  ^>=4.18.2.1
    , effectful
    , effectful-core
    , effectful-plugin
    , effectful-th
    , octizys
    , optparse-applicative
    , pretty-show
    , prettyprinter
    , text

  -- Directories containing source files.
  hs-source-dirs:   app repl compiler

  -- Base language which the package is written in.
  default-language: Haskell2010

test-suite octizys-test
  -- Import common warning flags.
  import:
    warnings,
    common_extensions

  -- Base language which the package is written in.
  default-language: Haskell2010

  -- LANGUAGE extensions used by modules in this package.
  -- other-extensions:

  -- The interface type and version of the test suite.
  type:             exitcode-stdio-1.0

  -- Directories containing source files.
  hs-source-dirs:   test

  -- The entrypoint to the test suite.
  main-is:          Main.hs

  -- Modules included in this executable, other than Main.
  other-modules:
    Octizys.Test.Effects.Parser
    Octizys.Test.Parser.PrettyParse

  -- Octizys.Test.Parser.PrettyParse
  -- Test dependencies.
  build-depends:
    , base           ^>=4.18.2.1
    , containers
    , effectful
    , hspec
    , octizys
    , prettyprinter
    , QuickCheck
    , text
